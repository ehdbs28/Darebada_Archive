.reputable {
    flex-shrink: 0;
    flex-basis: 20%;
    width: 100%;
    flex-grow: 1;
}

.reputable Label {
    font-size: 35px;
}

.reputable > #gauge {
    background-color: rgba(221, 221, 221, 0.49);
    width: 100%;
    height: 10px;
}

.reputable #inner-gauge {
    width: 100%;
    height: 100%;
    transform-origin: left;
    background-color: rgb(255, 255, 255);
}
