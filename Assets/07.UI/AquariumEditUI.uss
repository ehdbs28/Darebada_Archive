.facility-btn > #image {
    width: 90%;
    height: 90%;
}

.facility-btn > #text {
    font-size: 35px;
}

.facility-btn {
    width: 200px;
    height: 200px;
    padding-left: 10px;
    padding-right: 10px;
    padding-top: 10px;
    padding-bottom: 10px;
    align-items: center;
    background-color: rgba(0, 0, 0, 0.59);
    border-top-left-radius: 5px;
    border-bottom-left-radius: 5px;
    border-top-right-radius: 5px;
    border-bottom-right-radius: 5px;
}
